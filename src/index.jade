extends layout

block title
    title 首页
block head  
    //- <!-- build:css css/index.css -->
    link(rel='stylesheet', type='text/css', href='css/index.css')  
    //- <!-- endbuild -->
block js   
    //- <!-- build:js js/index.js -->
    script(src='js/lib/jquery.js')   
    script(src='js/lib/store.js')   
    script(src='js/lib/template.js')    
    script(src='js/index.js')   
    //- <!-- endbuild -->
block content
    div.header
        div.search-box
          a#J_cancle.pos-left 取消 
          div.input-box
            div.i-left
              b.i-search
            input#iSearch.input(type='text',placeholder='搜索地点')
    div#J_Map.map
    div#J_marker.marker
        b
    div#J_Result.result
        div.listview
            div.no-item 正在加载中...
    script#J_listTmpl(type="text/html")
      {{if list.length>0}}
      {{each list as json }}
      <div class='item{{json.active}}' data-lng='{{json.lng}}' data-lat='{{json.lat}}'>
      <p class='name'>{{json.name}}</p>
      <p class='address'>{{json.address}}</p>
      </div>
      {{/each}}
      {{else}}
      <div class='no-item'>暂无数据</div>
      {{/if}}
    div#J_searchSection.search-section
        div#J_searchResult.search-result
            div.listview
                div.no-item 暂无数据 
        div#J_searchRecord.search-record
            div.listview
                div.no-item 暂无数据